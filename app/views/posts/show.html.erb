<%= stylesheet_link_tag(@setka.theme_files.css, media: 'all') %>
<%= javascript_include_tag(@setka.plugins) %>

<div class='container'>
  <div class='row'>
    <div class='col-md-4'>
      <%= link_to posts_path do %>
        <i class='bi-arrow-return-left'>Back to posts</i>
      <% end %>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-2'></div>
    <div class='col-md-8'>
      <center><h1><%= @post.title %></h1></center>
    </div>
    <div class='col-md-2'></div>
  </div>
</div>

<%= raw @post.body %>
