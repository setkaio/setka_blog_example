<table>
  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, post_path(post.id) %></td>
      <td><%= link_to 'Edit', edit_post_path(post.id) %></td>
      <td><%= link_to 'Delete', post_path(post.id), method: :delete %></td>
    </tr>
  <% end %>

  <tr><td><%= link_to 'New post', new_post_path %></td></tr>
</table>
